{
  "name": "meu-site",
  "version": "1.0.0",
  "description": "Portfolio profissional responsivo com Vue 3, Nuxt 3 e Vuetify - Design minimalista focado em DevOps",
  "author": "Henrique Pereira Zimermann <contato@henriqzimer.com.br>",
  "license": "MIT",
  "type": "module",
  "private": true,
  "homepage": "https://henriqzimer.com.br",
  "repository": {
    "type": "git",
    "url": "https://github.com/HenriqZimer/meu-site.git"
  },
  "bugs": {
    "url": "https://github.com/HenriqZimer/meu-site/issues"
  },
  "keywords": [
    "portfolio",
    "vue3",
    "nuxt3",
    "vuetify",
    "typescript",
    "devops",
    "responsive",
    "landing-page"
  ],
  "engines": {
    "node": ">=18.14.0 || >=20.0.0 || >=22.0.0 || >=24.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "dev": "nuxt dev",
    "dev:prod": "nuxt preview",
    "build": "nuxt build",
    "build:prod": "NODE_ENV=production nuxt build",
    "preview": "nuxt preview",
    "start": "node .output/server/index.mjs",
    "generate": "nuxt generate",
    "test": "echo 'No tests specified yet' && exit 0",
    "test:build": "npm run build",
    "validate": "./scripts/validate.sh",
    "postinstall": "nuxt prepare",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "clean": "rm -rf .nuxt .output node_modules/.cache dist",
    "clean:all": "npm run clean && rm -rf node_modules package-lock.json",
    "clean:docker": "docker system prune -f && docker volume prune -f",
    "cleanup": "./scripts/cleanup.sh",
    "cleanup:full": "./scripts/cleanup.sh full",
    "cleanup:docker": "./scripts/cleanup.sh docker"
  },
  "dependencies": {
    "@googlemaps/markerclusterer": "^2.6.2",
    "@mdi/font": "^7.4.47",
    "@nuxt/image": "^1.11.0",
    "@nuxt/scripts": "^0.12.1",
    "@nuxt/ui": "^4.0.1",
    "@unhead/vue": "^2.0.19",
    "nuxt": "^4.1.3",
    "typescript": "^5.9.3",
    "vue": "^3.5.22",
    "vue-router": "^4.5.1",
    "vuetify": "^3.10.5"
  },
  "devDependencies": {
    "@nuxt/eslint": "^1.9.0",
    "@nuxtjs/sitemap": "^7.4.7",
    "@types/node": "^24.7.1",
    "eslint": "^9.37.0",
    "sass-embedded": "^1.93.2",
    "vuetify-nuxt-module": "^0.18.7"
  },
  "optionalDependencies": {
    "sharp": "^0.34.4"
  }
}